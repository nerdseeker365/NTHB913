<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

 <hibernate-mapping>
     <class  name="com.nt.entity.Employee" table="EMPLOYEE">
           <id name="eid"   column="EID" length="10"  type="int"  />  <!-- Singular Id Field      -->
           <property name="ename"  column="ENAME" type="string" length="20"/>
           <property name="eadd"  column="EADD" type="string" length="20"/>
           <property name="esalary" column="ESALARY"  type="float" length="10"  precision="2"/>
     </class>
 
 </hibernate-mapping>	